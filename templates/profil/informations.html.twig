{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block main %}
<div class="container">
    <table class="table" border="1">
        <tbody>
            <tr>
                <td>Nom Prénom</td>
                <td>{{app.user.nom}} {{app.user.prenom}}</td>
            </tr>
            <tr>
                <td>Adresse mail</td>
                <td>{{app.user.email}}</td>
            <tr>
            <tr>
                <td>Code parrainage</td>
                <td>{{app.user.codeParrainage}}</td>
            </tr>
            <tr>
                <td>Numéro de téléphone</td>
                <td>{{app.user.numeroTelephone}}</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>{{app.user.adresse.nomRue}}</td>
            </tr>
            </tbody>
    </table>
</div>
{% endblock %}
