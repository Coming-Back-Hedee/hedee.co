{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié ?{% endblock %}

{% block stylesheets %} 
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/style_mdp.css')}}">
{% endblock %}

{% block main %}
<div class="container-fluid">
    <div class="row">
    
    <div class="bloc1bis"><h1>Mot de passe oublié ?</h1></div>
    <div class="bloc1">
        
        <p>Demandez à réinitialiser votre mot de passe en renseignant votre mail.</p>

        {{form_start(form)}}
            {{form_widget(form.email,  {'attr':{'placeholder': 'Votre adresse mail'}}) }}
            <button class="blue_button" type="submit">Envoyer</button>
        {{form_end(form)}}
        {% for message in app.flashes('success') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
    </div>
    </div>
</div>
{% endblock %}