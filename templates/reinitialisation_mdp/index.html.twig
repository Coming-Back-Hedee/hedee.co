{% extends 'base.html.twig' %}

{% block title %}Renouveler votre mot de passe{% endblock %}

{% block stylesheets %} 
    {{ parent() }}
    <link rel="stylesheet" href="{{asset('css/style_mdp.css')}}">
{% endblock %}

{% block main %}
    <div class="bloc1 container">
        {% for message in app.flashes('warning') %}
            <div class="flash-notice">
                {{ message }}
            </div>
        {% endfor %}
        <h1>Renouveler votre mot de passe</h1>
        {{form_start(form)}}
            {{form_widget(form.plainPassword.first,  {'attr':{'placeholder': 'Nouveau mot de passe'}})}}
            {{form_widget(form.plainPassword.second,  {'attr':{'placeholder': 'Confirmez le mot de passe'}})}}
            <button class="blue_button"  type="submit">Envoyer</button>
        {{form_end(form)}}
    </div>
{% endblock %}