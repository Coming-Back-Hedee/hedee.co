                    {{ form_errors(form1.client.email) }}
                    {{ form_widget(form1.client.email, {'id': 'email'}) }} 
        </div>
                                                
        <div class="pswd1">
                    {{ form_label(form1.client.plainPassword.first) }}
                    <br>
                    {{ form_errors(form1.client.plainPassword.first) }}
                    {{ form_widget(form1.client.plainPassword.first, {'id': 'password1'}) }} 
        </div>
