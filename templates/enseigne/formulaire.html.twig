                        <label for="internet">En ligne</label>
                        <input type="radio" name="choix" value="internet" id="internet"/>
                    </div>
                    <div id="form_demande">
                    
                    </div>            
                                   

                    {#<div class="facture">
                        {{ form_label(form1.pieceJointe ) }}
                        <br>
                        {{ form_widget(form1.pieceJointe, {'attr': {'id': 'num_com'}} ) }}
