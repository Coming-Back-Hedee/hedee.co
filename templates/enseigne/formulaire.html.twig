                        <div class="code_postal_2">
                        {{ form_label(form1.client.adresse.codePostal) }}
                        <br>
                        {{ form_widget(form1.client.adresse.codePostal, { attr: 
                        { 'onkeypress': "return verifierCaracteres(event);"}, 'id': 'cp_perso'}) }}
